                            .relative.float-left.w-full.transition-transform.ease-in-out(class='-mr-[100%] duration-[600ms] motion-reduce:transition-none' data-te-carousel-active='' data-te-carousel-item='' style='backface-visibility: hidden')
                                img.block.w-full(src='https://tecdn.b-cdn.net/img/Photos/Slides/img%20(15).jpg' alt='...')
                                .absolute.bottom-5.hidden.py-5.text-center.text-white(class='inset-x-[15%] md:block')
