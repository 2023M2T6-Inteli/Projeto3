                            button.box-content.flex-initial.cursor-pointer.border-0.border-solid.border-transparent.bg-white.bg-clip-padding.p-0.opacity-50.transition-opacity(type='button' data-te-target='#carouselExampleCaptions' data-te-slide-to='1' class='mx-[3px] h-[3px] w-[30px] border-y-[10px] -indent-[999px] duration-[600ms] ease-[cubic-bezier(0.25,0.1,0.25,1.0)] motion-reduce:transition-none' aria-label='Slide 2')
                            button.box-content.flex-initial.cursor-pointer.border-0.border-solid.border-transparent.bg-white.bg-clip-padding.p-0.opacity-50.transition-opacity(type='button' data-te-target='#carouselExampleCaptions' data-te-slide-to='2' class='mx-[3px] h-[3px] w-[30px] border-y-[10px] -indent-[999px] duration-[600ms] ease-[cubic-bezier(0.25,0.1,0.25,1.0)] motion-reduce:transition-none' aria-label='Slide 3')
                        // Carousel items
                        .relative.w-full.overflow-hidden(class="after:clear-both after:block after:content-['']")
