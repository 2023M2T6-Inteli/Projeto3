//-
    Import logged_in layout
extends layouts/logged_in.pug
block content
    //Main
    .flex.flex-col.items-center.gap-y-3.justify-center.mt-16(class='ml-20 sm:mt-28 mr-24')
        //Section title
        .p-4.flex.flex-col.gap-2.items-center.justify-center.rounded-2xl(class='min-w-[250px] w-full bg-[#16afb8]')
            input.w-full.pl-2.py-2.rounded-xl.text-left.text-sm(type='text' placeholder='Nome da atividade:' class='text-[#16afb8] bg-[#F0F0F0] dark:bg-[#333333] font-bold sm:text-base')
            .flex.flex-row.gap-2.w-full
                input.rounded-xl.pl-2.py-2.text-left.text-sm(type='text' placeholder='Disciplina:' class='text-[#16afb8] bg-[#F0F0F0] dark:bg-[#333333] font-bold w-7/12 sm:w-2/3 sm:text-base')
                input.rounded-xl.text-left.pl-2.py-2.text-sm(type='text' placeholder='Data:' class='text-[#16afb8] bg-[#F0F0F0] dark:bg-[#333333] font-bold w-5/12 sm:w-1/3 sm:text-base')
        //Section form-activities
        #questionsArea.flex.flex-col.rounded-2xl.p-4.items-center.w-full.gap-3(class='bg-[#16afb8] min-w-[250px]')
            #questionBox.w-full.mb-4.rounded-lg(class='bg-[#D9D9D9] dark:bg-[#1F1F1F]')
                //Text box
                .flex.items-center.justify-between.px-3.py-2(class="dark:border-b-[#7A7A7A]")
                    #tools.flex.flex-wrap.items-center(class='divide-[#D9D9D9] dark:divide-[#1f1f1f] sm:divide-x')
                        .flex.items-center.space-x-1(class='sm:pr-4')
                            button.p-2.rounded.cursor-pointer(type='button' class='text-[#16AFB8] hover:text-[#369398] hover:bg-[#F0F0F0] dark:hover:bg-[#333333]')
                                svg.w-5.h-5(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                                    path(fill-rule='evenodd' d='M8 4a3 3 0 00-3 3v4a5 5 0 0010 0V7a1 1 0 112 0v4a7 7 0 11-14 0V7a5 5 0 0110 0v4a3 3 0 11-6 0V7a1 1 0 012 0v4a1 1 0 102 0V7a3 3 0 00-3-3z' clip-rule='evenodd')
                                span.sr-only Attach file
                            button.p-2.rounded.cursor-pointer(type='button' class='text-[#16AFB8] hover:text-[#369398] hover:bg-[#F0F0F0] dark:hover:bg-[#333333]')
                                svg.w-5.h-5(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                                    path(fill-rule='evenodd' d='M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z' clip-rule='evenodd')
                                span.sr-only Upload image
                            button.p-2.rounded.cursor-pointer(type='button' class='text-[#16AFB8] hover:text-[#369398] hover:bg-[#F0F0F0] dark:hover:bg-[#333333]')
                                svg.w-5.h-5(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                                    path(fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-.464 5.535a1 1 0 10-1.415-1.414 3 3 0 01-4.242 0 1 1 0 00-1.415 1.414 5 5 0 007.072 0z' clip-rule='evenodd')
                                span.sr-only Add emoji
                            button.p-2.rounded.cursor-pointer(type='button' class='text-[#16AFB8] hover:text-[#369398] hover:bg-[#F0F0F0] dark:hover:bg-[#333333]')
                                svg.w-5.h-5(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                                    path(fill-rule='evenodd' d='M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z' clip-rule='evenodd')
                                span.sr-only Download
                    button#deleteQuestionButton.bg-white.rounded-md.p-2.inline-flex.items-center.justify-center.text-gray-400(onclick='functionDelete' type='button' class='hover:text-gray-500 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500')
                        span.sr-only Delete Question
                        svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor' aria-hidden='true')
                            path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M6 18L18 6M6 6l12 12')


                #textArea.px-4.py-2.rounded-b-lg(class='bg-[#F0F0F0] dark:bg-[#333333]')
                    textarea.block.w-full.px-0.text-sm.border-0(rows='8' class='text-[#333333] dark:text-[#F0F0F0] bg-[#F0F0F0] dark:bg-[#333333] focus:ring-0' placeholder='Write event description here...' required='')
                        | The 4th Digital Transformation and Industry 4.0 Free Online Conference Organized by Flowbite and Themesberg, Live on Saturday 26th Nov at 02:00 pm GMT | 04:00 pm EET on Zoom Webinars
            #submitButtons.flex.flex-row.items-center.h-24.shadow.rounded-xl.mt-4.w-full(class='bg-[#F0F0F0] dark:bg-[#333333] dark:shadow-[#7A7A7A]')
                //Submit buttons
                .flex.items-center.h-full(class='w-8/12 min-w-[90px]')
                    button#addQuestionButton.rounded-xl.ml-2.px-2.py-2.text-white.shadow.font-bold.text-sm(class='bg-[#16afb8] dark:shadow-[#7A7A7A] lg:text-lg sm:text-base sm:px-4 sm:ml-6') Adicionar pergunta
                .flex.items-center.justify-end.h-full(class='w-4/12 min-w-[120px]')
                    button.rounded-xl.mr-2.px-4.py-2.text-white.shadow.font-bold.text-sm(class='bg-[#16afb8] lg:text-xl md:text-lg sm:text-base dark:shadow-[#7A7A7A] sm:mr-6') Imprimir

        .flex.flex-row.pb-6.gap-2.items-center.justify-end.h-fit(class='w-full min-w-[120px]')
            button.rounded-xl.mr-6.px-4.py-2.text-white.shadow.font-bold.text-sm(class='bg-[#16afb8] lg:text-xl md:text-lg sm:text-base dark:shadow-[#7A7A7A]') Duplicar
            button.rounded-xl.px-4.py-2.text-white.shadow.font-bold.text-sm(class='bg-[#16afb8] lg:text-xl md:text-lg sm:text-base dark:shadow-[#7A7A7A]') Salvar
        script(src='/javascripts/front_create.js')
