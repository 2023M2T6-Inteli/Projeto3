//-
    Import logged_in layout
extends layouts/logged_in.pug
block content
    //Main
    .flex.flex-col.items-center.justify-center.mt-8
        //Section Filter-classes
        .p-4.flex.items-center.justify-center.rounded-2xl(class='min-w-[200px] w-9/12 bg-[#16afb8]')
            select#classroomsList.w-full.p-3.shadow.rounded-2xl.pr-2.text-2xl(class='text-[#16afb8] bg-[#F0F0F0] dark:bg-[#1F1F1F]')
                option(value='0') Turma
        //Section classes
        .flex(class='flex-row rounded-2xl w-11/12 flex-wrap gap-3 sm:flex-nowrap mt-5 py-4 items-center bg-[#16afb8]')
            input#classroomName.text-sm.shadow.rounded-3xl.py-3.ml-12.text-center.px-6(type='text' placeholder='Nova turma' class='text-[#16afb8] bg-[#F0F0F0] w-[158.5px] sm:w-4/12 dark:bg-[#1F1F1F] sm:ml-12 sm:text-xl')
            input#classroomSubject.text-sm.shadow.ml-12.rounded-3xl.py-3.text-center.px-6(type='text' placeholder='Disciplina' class='text-[#16afb8] bg-[#F0F0F0] w-[158.5px] sm:w-4/12 dark:bg-[#1F1F1F] sm:ml-0 sm:text-xl')
            input#classroomYear.text-sm.shadow.rounded-3xl.py-3.ml-12.text-center.px-6(type='text' placeholder='Ano (n√∫mero)' class='text-[#16afb8] bg-[#F0F0F0] w-[158.5px] sm:w-4/12 dark:bg-[#1F1F1F] sm:ml-0 sm:text-xl')
            .w-44(class="sm:mr-10 mr-0")
                button#addClass.h-10.shadow.rounded-3xl.ml-12.text-sm.text-center(class='text-[#16AFB8] bg-[#F0F0F0] sm:text-xl sm:rounded-3xl sm:px-4 sm:h-12 px-6 sm:ml-0') Adicionar
        .flex.flex-col.mt-5.rounded-2xl.p-3(class='bg-[#16afb8] min-w-[250px] w-11/12')
            .flex.flex-row.gap-2.items-center(class='sm:gap-5')
                .relative.flex(class='w-11/12 min-w-[98px]')
                    input#studentName.w-full.text-sm.shadow.rounded-3xl.py-2.text-center.px-6(type='text' placeholder='Novo aluno' class='text-[#16afb8] bg-[#F0F0F0] dark:bg-[#1F1F1F] sm:text-xl')
                button#addStudent.rounded-3xl.shadow.px-2.py-2(class='text-[#16afb8] bg-[#F0F0F0] dark:bg-[#1F1F1F] sm:px-4') Adicionar
            .rounded-2xl.mt-5.shadow.p-3.text-2xl.mb-2(class='dark:shadow-[#7A7A7A] sm:text-3xl bg-[#F0F0F0] dark:bg-[#1F1F1F] text-[#16afb8]')
                ul#studentsList
    script(src='https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js')
    script(src="./javascripts/front_classrooms.js") 
